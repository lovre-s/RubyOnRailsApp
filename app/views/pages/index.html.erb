<div class="row">
   <!-- Blog Post Content Column -->
   <div class="col-lg-8">
      <div class="jumbotron">
         <h1 class="display-4">Home page</h1>
         <p class="lead"> Website built with Ruby on Rails</p>
         <hr class="my-4">
     </div>
   </div>
   <!-- Blog Sidebar Widgets Column -->
   <div class="col-md-4">

      <!-- Active Users Well -->
      <div class="well">
         <h4>Active Users</h4>
         <div class="row">
            <div class="col-lg-6">
               <ul class="list-unstyled">              
                  <li><% @articles.each do |u| %></li>            
                  <li><%= u.user.username %></li>     
                  <% end %>         
               </ul>
            </div>
            <div class="col-lg-6">
               <ul class="list-unstyled">
                  <li><% @articles.each do |c| %></li>            
                  <li><%= time_ago_in_words(c.created_at) %></li>     
                  <% end %>        
               </ul>
            </div>
         </div>
         <!-- /.row -->
      </div>
      <!-- Side Widget Well -->
      <div class="well">
         <h4>Recent Posts</h4>
         <% @articles.each do |a| %>
           Created by: <%= a.user.username %> <br />
            <strong><%= link_to a.title, a %></strong>
            <p><%= truncate (a.body) %></p>
         <% end %>
      </div>
   </div>
</div>
<!-- /.row -->
<hr>

